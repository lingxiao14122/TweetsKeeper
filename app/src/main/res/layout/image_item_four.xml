<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_1"
        android:layout_width="145dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/singleRoundedImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_1_type"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:background="@drawable/image_type_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_preview_four_1"
        app:layout_constraintBottom_toBottomOf="@id/image_preview_four_1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_2"
        android:layout_width="145dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_preview_four_1"
        app:shapeAppearanceOverlay="@style/singleRoundedImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_2_type"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:background="@drawable/image_type_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_preview_four_2"
        app:layout_constraintBottom_toBottomOf="@id/image_preview_four_2"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_3"
        android:layout_width="145dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_preview_four_1"
        app:layout_constraintTop_toTopOf="@id/image_preview_four_1"
        app:shapeAppearanceOverlay="@style/singleRoundedImageView"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_3_type"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:background="@drawable/image_type_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_preview_four_3"
        app:layout_constraintBottom_toBottomOf="@id/image_preview_four_3"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_4"
        android:layout_width="145dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_preview_four_2"
        app:layout_constraintBottom_toBottomOf="@id/image_preview_four_2"
        app:layout_constraintTop_toBottomOf="@id/image_preview_four_3"
        app:shapeAppearanceOverlay="@style/singleRoundedImageView"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_four_4_type"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:background="@drawable/image_type_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_preview_four_4"
        app:layout_constraintBottom_toBottomOf="@id/image_preview_four_4"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>